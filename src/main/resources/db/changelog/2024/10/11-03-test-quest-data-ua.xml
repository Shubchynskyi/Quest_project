        <insert tableName="answer">
            <column name="id" valueNumeric="55"/>
            <column name="next_question_id" valueNumeric="38"/>
            <column name="question_id" valueNumeric="42"/>
            <column name="text" value="Ура. Набиваємо кишені..."/>
