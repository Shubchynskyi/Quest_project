        <insert tableName="answer">
            <column name="id" valueNumeric="68"/>
            <column name="next_question_id" valueNumeric="47"/>
            <column name="question_id" valueNumeric="48"/>
            <column name="text" value="наліво підеш - в казку попадеш"/>
        </insert>
    </changeSet>

</databaseChangeLog>